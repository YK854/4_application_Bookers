<div id="notice">
  <p><%= flash[:success] %></p>
</div>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @books.each do |b| %>
    <tbody>
      <tr>
        <td><%= b.title %></td>
        <td><%= b.body %></td>
        <td><%= link_to "show", "/books/#{b.id}" %></td>
        <td><%= link_to "edit", "/books/#{b.id}/edit" %></td>
        <td><%= link_to "Destroy", "/books/#{b.id}", method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
    </tbody>
  <% end %>
</table>

<%= render template: "/books/new" %>